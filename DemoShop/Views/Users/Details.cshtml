@model EditViewModel
@{
    ViewData["Title"] = "Информация о пользователе";
}
@section BeforeCss {
    @{ await Html.RenderPartialAsync("_ScriptSyncfusionCss"); }
}

<div class="row">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        <div class="card">
            @{await Html.RenderPartialAsync("_DetailsPartial", Model);}
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-edit fa-fw"></i> Редактировать</a>
                <a class="btn btn-secondary" asp-action="Index">Отмена</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ScriptSyncfusionJs"); }
}


