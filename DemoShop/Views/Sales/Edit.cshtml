@model EditViewModel
@{
    ViewData["Title"] = "Редактирование продажи";
}
@section BeforeCss {
    @{ await Html.RenderPartialAsync("_ScriptSyncfusionCss"); }
}

<div class="row">
    <div class="col-12 col-sm-10 col-md-10 col-lg-8">
        <div class="card">
            <form asp-action="Edit" method="post">
                <div class="card-body card-block">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="SalesDate" class="control-label"></label>
                        <input type="date" asp-for="SalesDate" class="form-control" autofocus />
                        <span asp-validation-for="SalesDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductID" class="control-label"></label>
                        <input type="hidden" asp-for="ProductID" />
                        <ej-combo-box id="Products" datasource="(IEnumerable<SalesProductViewModel>)Model.Products"
                                      placeholder="Выберите категорию" value="@Model.ProductID" select="products_onselect">
                            <e-combo-box-fields text="ProductName" value="ID" group-by="CategoryName"/>
                        </ej-combo-box>
                        <span asp-validation-for="ProductID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Count" class="control-label"></label>
                        <input type="number" asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input type="number" asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <a class="btn btn-secondary" asp-action="Index">Отмена</a>
                </div>
            </form>

        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ScriptSyncfusionJs"); }
}
<environment include="Development">
    <script src="~/js/sales.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/sales.min.js"></script>
</environment>
