@model ResetPasswordViewModel
@{
    Layout = "/Views/Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = "Изменение пароля";
}

<div class="p-1 wrapper-account mx-auto">
    <form asp-action="ResetPassword" method="post"  class="form-horizontal m-t-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Code" type="hidden" />
        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group text-center row m-t-20">
            <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block waves-effect waves-light">Изменить</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}