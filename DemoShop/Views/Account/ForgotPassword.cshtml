@model ForgotPasswordViewModel
@{
    Layout = "/Views/Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = "Восстановление пароля";
}
@addTagHelper *, PaulMiami.AspNetCore.Mvc.Recaptcha

<div class="p-1 wrapper-account mx-auto">

    <h4 class="text-muted text-center mt-0 m-b-20"><b>@ViewData["Title"]</b></h4>

    <form asp-action="ForgotPassword" method="post" class="form-horizontal m-t-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Email" class="sr-only"></label>
                <input asp-for="Email" class="form-control" placeholder="Электронный адрес" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 container-recaptcha">
                <recaptcha />
                <span class="text-danger" id="recaptchaErrorMessage"></span>
            </div>
        </div>
        <div class="form-group text-center row m-t-10">
            <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block waves-effect waves-light">Отправить</button>
                <button type="button" onclick="history.back();" class="btn btn-secondary btn-sm btn-block waves-effect waves-light">Отмена</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />
}