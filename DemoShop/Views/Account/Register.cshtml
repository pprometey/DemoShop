@model RegisterViewModel
@{
    Layout = "/Views/Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = "Регистрация пользователя";
}
@addTagHelper *, PaulMiami.AspNetCore.Mvc.Recaptcha

<div class="p-1 wrapper-account mx-auto">

    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal m-t-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-12">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" autofocus />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12 ">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 container-recaptcha">
                <recaptcha />
                <span class="text-danger" id="recaptchaErrorMessage"></span>
            </div>
        </div>

        <div class="form-group text-center row m-t-20">
            <div class="col-12">
                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Зарегистрироваться</button>
            </div>
        </div>

        <div class="form-group m-t-10 mb-0 row">
            <div class="col-12 m-t-10 text-center">
                <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-muted">Уже есть аккаунт?</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />
}